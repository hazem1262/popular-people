<?xml version="1.0" encoding="UTF-8"?>
<ripple
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="@color/accentTurquoiseBlue"
	>
	<item android:id="@+id/roundedCardShape">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/backgroundWhite"/>

			<padding
				android:left="1dp"
				android:top="1dp"
				android:right="1dp"
				android:bottom="1dp"
				/>

			<corners
				android:bottomRightRadius="@dimen/cornerRadiusMedium"
				android:bottomLeftRadius="@dimen/cornerRadiusMedium"
				android:topLeftRadius="@dimen/cornerRadiusSmall"
				android:topRightRadius="@dimen/cornerRadiusMedium"
				/>

		</shape>
	</item>
</ripple>